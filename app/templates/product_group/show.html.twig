        <div class="col-md-12">

            <div class="card card-primary card-outline card-outline-tabs">
                <div class="card-body">

                    <dl>
                        {% if productGroup.name %}
                            <dt>{{ 'label.name'|trans }}</dt>
                            <dd>{{ productGroup.name }}</dd>
                        {% endif %}
                    </dl>

                </div>
                <!-- /.card -->
            </div>

        </div>
    </div>
    <!-- /.row -->

{% endblock %}


